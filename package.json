    "@types/eslint": "^8.44.8",
    "@types/eslint__eslintrc": "^2.1.1",
    "@types/jest": "^29.5.11",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "npm-check-updates": "^16.14.12",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
