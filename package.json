{
  "name": "eslint-config-txo-typescript",
  "version": "1.0.0",
  "description": "Technology Studio - Typescript config",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/technology-studio/txo-typescript.git"
  },
  "author": {
    "name": "Technology Studio",
    "email": "npm@technologystudio.sk",
    "url": "https://github.com/technology-studio/"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint --format=node_modules/eslint-formatter-pretty --ext .jsx,.js,.ts,.tsx .",
    "fixcode": "eslint --format=node_modules/eslint-formatter-pretty --ext .jsx,.js,.ts,.tsx . --fix",
    "git-hook": "yarn -s lint"
  },
  "husky": {
    "hooks": {
      "precommit": "yarn run git-hook",
      "prepush": "yarn run git-hook"
    }
  },
  "dependencies": {
    "eslint-config-standard": "^14.1.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-formatter-pretty": "^3.0.1",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.0.10",
    "typescript": "^3.9.3"
  }
}
