{
  "name": "eslint-config-txo-typescript",
  "version": "6.0.2",
  "description": "Technology Studio - Eslint typescript config",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/technology-studio/eslint-config-txo-typescript.git"
  },
  "author": {
    "name": "Technology Studio",
    "email": "npm@technologystudio.sk",
    "url": "https://github.com/technology-studio/"
  },
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc",
    "git-hook": "yarn -s lint",
    "lint:ci": "yarn lint",
    "lint:fix": "eslint . --fix",
    "lint": "eslint --max-warnings 0 .",
    "ncu-all": "ncu -i",
    "prepare": "husky && yarn build",
    "sanity": "yarn build && yarn lint:ci && yarn outdated && echo 'success'",
    "semantic-release": "semantic-release",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "type-check": "tsc --noEmit"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4.1",
    "@stylistic/eslint-plugin": "^2.11.0",
    "eslint": "^9.15.0",
    "eslint-config-love": "^101.0.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-n": "^17.14.0",
    "eslint-plugin-promise": "^7.1.0",
    "globals": "^15.12.0",
    "typescript-eslint": "^8.15.0"
  },
  "devDependencies": {
    "@txo/commitlint": "^1.0.20",
    "@txo/semantic-release": "^2.0.10",
    "@txo/tsconfig": "^2.0.0",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^29.5.14",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "npm-check-updates": "^17.1.11",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  }
}
